<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/dp15"
    android:paddingTop="@dimen/dp15"
    tools:context=".ui.fragment.settings.SettingsFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivTopLogo"
        android:layout_width="@dimen/dp45"
        android:layout_height="@dimen/dp45"
        android:background="@drawable/round_ripple"
        android:scaleType="centerInside"
        android:src="@drawable/app_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivNotifications"
        android:layout_width="@dimen/dp45"
        android:layout_height="@dimen/dp45"
        android:background="@drawable/ripple_effect"
        android:scaleType="centerInside"
        android:src="@drawable/ic_notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/viewScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivNotifications">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:drawablePadding="@dimen/dp8"
                android:text="@string/settings"
                android:textColor="@color/black"
                android:textSize="@dimen/sp22"
                android:theme="@style/boldFont"
                app:drawableStartCompat="@drawable/ic_setting" />

            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:background="@drawable/ripple_effect"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center|start"
                android:minHeight="@dimen/dp48"
                android:paddingHorizontal="@dimen/dp5"
                android:text="@string/open_profile"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:alpha="0.4"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/tvAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/ripple_effect"
                android:gravity="center|start"
                android:minHeight="@dimen/dp48"
                android:paddingHorizontal="@dimen/dp5"
                android:text="@string/delete_ads"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:alpha="0.4"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/tvContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/ripple_effect"
                android:gravity="center|start"
                android:minHeight="@dimen/dp48"
                android:paddingHorizontal="@dimen/dp5"
                android:text="@string/contact_us"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:alpha="0.4"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/tvTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/ripple_effect"
                android:gravity="center|start"
                android:minHeight="@dimen/dp48"
                android:paddingHorizontal="@dimen/dp5"
                android:text="@string/privacy_amp_terms"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:alpha="0.4"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/tvLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/ripple_effect"
                android:gravity="center|start"
                android:minHeight="@dimen/dp48"
                android:paddingHorizontal="@dimen/dp5"
                android:text="@string/language"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:alpha="0.4"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/tvBlockList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/ripple_effect"
                android:gravity="center|start"
                android:minHeight="@dimen/dp48"
                android:paddingHorizontal="@dimen/dp5"
                android:text="@string/block_list"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:alpha="0.4"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/ripple_effect"
                android:gravity="center|start"
                android:minHeight="@dimen/dp48"
                android:paddingHorizontal="@dimen/dp5"
                android:text="@string/log_out"
                android:textColor="@color/red"
                android:textSize="@dimen/sp16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:alpha="0.4"
                android:background="@color/light_gray" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>