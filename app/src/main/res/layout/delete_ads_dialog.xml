<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_edg_10"
        android:backgroundTint="@color/white"
        android:padding="@dimen/dp5">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:background="@drawable/round_ripple"
            android:padding="@dimen/dp5"
            android:src="@drawable/ic_baseline_cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/red" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/delete_ads_now"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16"
            app:layout_constraintTop_toBottomOf="@id/ivClose" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp10"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMessage"
            app:layout_goneMarginTop="@dimen/dp5">

            <ImageView
                android:id="@+id/ivTelgram"
                android:layout_width="@dimen/dp48"
                android:layout_height="@dimen/dp48"
                android:scaleType="centerInside"
                android:src="@drawable/ic_telgram" />

            <Space
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20" />

            <ImageView
                android:id="@+id/ivWhatsApp"
                android:layout_width="@dimen/dp48"
                android:layout_height="@dimen/dp48"
                android:scaleType="centerInside"
                android:src="@drawable/ic_whatsapp" />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>